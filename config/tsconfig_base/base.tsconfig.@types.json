{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "composite": true,
    "incremental": true,
    "lib": ["dom", "es6", "es2015.iterable", "esnext.asynciterable", "es2019"],
    "importHelpers": true,
    "noEmitOnError": true,
    "removeComments": false,
    "importsNotUsedAsValues": "error",
    "strict": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "newLine": "lf",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true
  }
}
