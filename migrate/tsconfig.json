{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "types" : [ "node","jest"],
    "declaration": true, // 是否生成声明文件
    "declarationDir": "dist/type", // 声明文件打包的位置
    "lib": ["esnext", "dom", "dom.iterable", "scripthost", "es6"]
  },
  "include": [/* 需要编译的文件 */ "src/**/*.ts", "typings/**/*.ts"],
  "exclude": ["./dist"]
}
